{
  "name": "plantuml-visualizer",
  "version": "1.0.0",
  "description": "",
  "homepage": "https://github.com/WillBooster/plantuml-visualizer",
  "bugs": {
    "url": "https://github.com/WillBooster/plantuml-visualizer/issues"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/WillBooster/plantuml-visualizer.git"
  },
  "license": "Apache-2.0",
  "author": "WillBooster LLC",
  "main": "index.js",
  "scripts": {
    "prebuild": "shx rm -Rf dist && shx mkdir dist && shx cp icon.png manifest.json dist/",
    "build": "parcel build src/content_scripts.ts src/background.ts src/popup.html --public-url ./",
    "lint": "tslint -p . -t verbose",
    "lint-fix": "yarn lint --fix",
    "package": "yarn build && zip -r dist.zip dist",
    "prettier": "prettier --write {*,**/*}.{css,htm,html,js,json,md,scss,yaml,yml} && yarn sort-package-json",
    "start-popup": "parcel src/popup.html --open",
    "typecheck": "tsc --noEmit",
    "watch": "yarn prebuild && parcel watch src/content_scripts.ts src/background.ts src/popup.html --public-url ./ --no-hmr"
  },
  "prettier": "prettier-config-willbooster",
  "dependencies": {
    "jquery": "3.4.1",
    "pako": "1.0.10"
  },
  "devDependencies": {
    "@types/chrome": "0.0.83",
    "@types/jquery": "3.3.29",
    "@types/pako": "1.0.1",
    "husky": "2.2.0",
    "lint-staged": "8.1.6",
    "parcel-bundler": "1.12.3",
    "prettier": "1.17.0",
    "prettier-config-willbooster": "0.0.3",
    "renovate-config-willbooster": "0.0.4",
    "shx": "0.3.2",
    "sort-package-json": "1.22.1",
    "tsconfig-willbooster": "0.0.3",
    "tslint": "5.16.0",
    "tslint-config-prettier": "1.18.0",
    "tslint-config-willbooster": "0.0.3",
    "tslint-microsoft-contrib": "6.1.1",
    "tslint-plugin-prettier": "2.0.1",
    "typescript": "3.4.5"
  }
}
