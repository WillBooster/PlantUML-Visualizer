{
  "name": "plantuml-visualizer",
  "version": "1.0.0",
  "description": "",
  "homepage": "https://github.com/WillBooster/plantuml-visualizer",
  "bugs": {
    "url": "https://github.com/WillBooster/plantuml-visualizer/issues"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/WillBooster/plantuml-visualizer.git"
  },
  "license": "Apache-2.0",
  "author": "WillBooster LLC",
  "main": "index.js",
  "scripts": {
    "prebuild": "shx rm -Rf dist && shx mkdir dist && shx cp icon.png manifest.json dist/",
    "build": "parcel build src/content_scripts.ts src/background.ts --public-url ./",
    "format": "yarn lint-fix && yarn prettier && yarn sort-package-json",
    "lint": "eslint . --ext .js,.jsx,.ts,.tsx",
    "lint-fix": "yarn lint --fix",
    "package": "yarn build && shx rm -f src.zip dist.zip && yarn pack && zip -r dist.zip dist",
    "prettier": "prettier --write {*,**/*}.{css,htm,html,js,json,md,scss,yaml,yml} && yarn sort-package-json",
    "start-popup": "parcel src/popup.html --open",
    "typecheck": "tsc --noEmit",
    "watch": "yarn prebuild && parcel watch src/content_scripts.ts src/background.ts --public-url ./ --no-hmr"
  },
  "prettier": "@willbooster/prettier-config",
  "dependencies": {
    "jquery": "3.4.1",
    "pako": "1.0.10"
  },
  "devDependencies": {
    "@types/chrome": "0.0.86",
    "@types/jquery": "3.3.29",
    "@types/pako": "1.0.1",
    "@typescript-eslint/eslint-plugin": "1.10.2",
    "@typescript-eslint/parser": "1.10.2",
    "@willbooster/eslint-config": "0.0.10",
    "@willbooster/prettier-config": "0.0.10",
    "@willbooster/renovate-config": "0.0.9",
    "@willbooster/tsconfig": "0.0.9",
    "eslint": "5.16.0",
    "eslint-config-prettier": "5.0.0",
    "eslint-plugin-prettier": "3.1.0",
    "husky": "2.4.1",
    "lint-staged": "8.2.1",
    "parcel-bundler": "1.12.3",
    "prettier": "1.18.2",
    "shx": "0.3.2",
    "sort-package-json": "1.22.1",
    "typescript": "3.5.2"
  }
}
