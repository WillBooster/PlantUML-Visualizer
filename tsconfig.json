{
  "compilerOptions": {
    "moduleResolution": "node",
    "alwaysStrict": true,
    "strict": true,
    "skipLibCheck": true,
    "allowSyntheticDefaultImports": true,
    "esModuleInterop": true,
    "resolveJsonModule": true,
    "sourceMap": true,
    "importHelpers": false,
    "outDir": "dist",
    "typeRoots": ["./node_modules/@types", "./@types"],
    "target": "esnext",
    "module": "esnext"
  },
  "include": [
    "src/**/*",
    "@types/**/*",
    "__tests__/**/*",
    "packages/*/src/**/*",
    "packages/*/@types/**/*",
    "packages/*/__tests__/**/*"
  ]
}
